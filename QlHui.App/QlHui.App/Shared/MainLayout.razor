@using Microsoft.Extensions.Configuration
@using QlHui.App.Data.Models.Config
@inherits LayoutComponentBase
@inject IConfiguration configuration;

@code {
    bool sidebarExpanded = false;
    OwnerConfigModel ownerConfig = new();
}

<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenLayout class="rz-shadow-3">
    <RadzenHeader>
        <RadzenRow>
            <RadzenColumn Size="4">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                    <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="8" class="rz-p-3">
                <RadzenStack AlignItems="AlignItems.Center">
                    <RadzenText TextStyle="TextStyle.DisplayH6" Style="color:white;">Chủ hụi: @ownerConfig.Name - SDT: @ownerConfig.PhoneNumber - STK: @ownerConfig.BankAccountNumber - Ngân hàng: @ownerConfig.BankName</RadzenText>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebarExpanded" Style="width:200px">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Quản lý Dây Hụi" Icon="view_list" Path="/TimKiemDayHui" />
            <RadzenPanelMenuItem Text="Quản lý Hụi Viên" Icon="group" Path="/TimKiemHuiVien" />
          @*   <RadzenPanelMenuItem Text="Biên lai" Path="/BienLai" /> *@
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        @Body
    </RadzenBody>
    <RadzenFooter></RadzenFooter>
</RadzenLayout>


